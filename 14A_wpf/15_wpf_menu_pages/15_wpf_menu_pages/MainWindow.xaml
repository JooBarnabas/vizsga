<Window x:Class="_15_wpf_menu_pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_15_wpf_menu_pages"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- menü -->
        <Menu FontSize="18" Padding="5">
            <MenuItem x:Name="MI_negyzet" Header="_Négyzet" Click="MI_negyzet_Click" />
            <MenuItem x:Name="MI_teglalap" Header="_Téglalap" Click="MI_teglalap_Click"/>
            <MenuItem x:Name="MI_kor" Header="_Kör" Click="MI_kor_Click"/>
        </Menu>
        
        <!-- alsó rész -->
        <Frame x:Name="FRM_nyito" Grid.Row="1"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
