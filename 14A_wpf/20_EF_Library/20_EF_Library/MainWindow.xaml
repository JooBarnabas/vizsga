<Window x:Class="_20_EF_Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20_EF_Library"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Padding="0,5,0,5">
            <MenuItem Header="Book list" x:Name="M_booklist"
                      Click="M_booklist_Click"/>
            <MenuItem Header="Kölcsönzés" x:Name="M_borrowing"
                      Click="M_borrowing_Click"/>
        </Menu>

        <Frame x:Name="FRM_nyito"
               NavigationUIVisibility="Hidden"
               Grid.Row="1"/>
    </Grid>
</Window>
